<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundDark"
    tools:context=".AddCard">
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/card_round_corner_grey">
    </ImageView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/return_addcard"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_keyboard_arrow_left_black_24dp">
        </TextView>
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD CARD"
            android:textColor="@color/textWhite"
            android:fontFamily="@font/nunitosemibold"
            android:textSize="27dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card name"
                android:fontFamily="@font/nunitosemibold"
                android:textColor="@color/textWhite"
                android:textSize="27dp">
            </TextView>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/add_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter your card name"
                android:textColorHint="@color/textGrey"
                android:backgroundTint="#00000000"
                android:textColor="@color/textWhite"
                android:fontFamily="@font/nunitolight"
                android:textSize="27dp">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="7dp"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Definition"
                android:textSize="27dp"
                android:textColor="@color/textWhite"
                android:fontFamily="@font/nunitosemibold">
            </TextView>
            <EditText
                android:layout_gravity="center"
                android:layout_below="@id/add_card_name"
                android:gravity="top|left"
                android:scrollbars="vertical"
                android:inputType="textMultiLine"
                android:lines="6"
                android:layout_marginLeft="30dp"
                android:id="@+id/add_card_definition"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:ems="2000"
                android:hint="Enter your definition"
                android:singleLine="false"
                android:maxLines="8"
                android:textColor="@color/textWhite"
                android:textColorHint="@color/textGrey"
                android:backgroundTint="#00FFFFFF"
                android:fontFamily="@font/nunitolight"
                android:textSize="27dp">
            </EditText>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Background"
            android:textSize="27dp"
            android:textColor="@color/textWhite"
            android:fontFamily="@font/nunitosemibold">
        </TextView>
        <androidx.viewpager.widget.ViewPager
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        </androidx.viewpager.widget.ViewPager>
    </LinearLayout>
</RelativeLayout>