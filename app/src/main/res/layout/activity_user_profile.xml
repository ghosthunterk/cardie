<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:background="@color/backgroundDark">

    <ImageView
        android:layout_marginTop="-50dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/card_round_corner_grey">
    </ImageView>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:elevation="3dp"
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:background="@drawable/avatar">
    </ImageView>
    <LinearLayout
        android:elevation="2dp"
        android:id="@+id/profile_frame"
        android:layout_marginTop="90dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:background="@drawable/circlefull">
        </ImageView>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/username_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id15z32"
            android:textSize="43dp"
            android:textColor="@color/textWhite"
            android:fontFamily="@font/nunitoregular">
        </TextView>
        <TextView
            android:layout_marginTop="-5dp"
            android:id="@+id/id_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="id: 1793271"
            android:textSize="17dp"
            android:textColor="@color/textWhite"
            android:fontFamily="@font/nunitoregular">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/profile_frame"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/profile_totalset"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/win_cup">
        </ImageView>
        <ImageView
            android:id="@+id/profile_totalcard"
            android:layout_marginLeft="15dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/win_cup">
        </ImageView>
        <ImageView
            android:id="@+id/profile_totaltest"
            android:layout_marginLeft="15dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/win_cup">
        </ImageView>
    </LinearLayout>

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/username_background">
    </ImageView>

</RelativeLayout>